{
  "name": "messagepedia-webrtc-electron",
  "version": "1.0.0",
  "description": "Complete P2P MessagePedia replacement with WebRTC + Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:signaling\" \"npm run dev:electron\"",
    "dev:electron": "NODE_ENV=development electron . --enable-logging",
    "dev:signaling": "cd src/signaling-server && npm run dev",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "webpack --mode production",
    "lint": "eslint src/ tests/"
  },
  "keywords": ["webrtc", "p2p", "messaging", "electron", "messagepedia"],
  "author": "Michael O'Boyle <michael@oboyle.co>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1",
    "events": "^3.3.0"
  }
}

{
  "name": "messagepedia-webrtc-electron",
  "version": "0.1.0",
  "description": "Modern WebRTC + Electron replacement for MessagePedia P2P messaging system",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:signaling\"",
    "dev:main": "nodemon --exec electron . --ignore src/renderer/",
    "dev:renderer": "cd src/renderer && npm run dev",
    "dev:signaling": "cd src/signaling-server && npm run dev",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "echo 'Building main process...'",
    "build:renderer": "cd src/renderer && npm run build",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix"
  },
  "keywords": [
    "webrtc",
    "electron",
    "p2p",
    "messaging",
    "file-sharing",
    "messagepedia"
  ],
  "author": "Michael O'Boyle <michael@oboyle.co>",
  "license": "TBD",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/MessagePedia-WebRTC-Electron.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/MessagePedia-WebRTC-Electron/issues"
  }
}
